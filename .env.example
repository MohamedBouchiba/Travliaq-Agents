# Supabase (Optional if using direct PG connection)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# PostgreSQL Connection Pooler (Supavisor)
PG_HOST=aws-1-eu-west-3.pooler.supabase.com
PG_DATABASE=postgres
PG_USER=postgres.************
PG_PASSWORD=**************
PG_PORT=5432
PG_SSLMODE=require
PG_POOL_MODE=session

# Environment (development, production)
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
API_RELOAD=true
API_WORKERS=1

# Rules
HAS_DESTINATION=no
ONLY_FLIGHTS=no
DATES_TYPE=flexible
BUDGET_PRECISE=no

# LLM API Keys
OPENAI_API_KEY=

# CrewAI settings
MAX_RPM=50
TEMPERATURE=0.3
MAX_ITER=5
VERBOSE=true

# Logging
LOG_LEVEL=INFO

# Langfuse
LANGFUSE_SECRET_KEY="sk-..."
LANGFUSE_PUBLIC_KEY="pk-..."
LANGFUSE_BASE_URL="https://cloud.langfuse.com"
MCP_SERVER_URL=https://travliaq-mcp-production.up.railway.app/mcp
