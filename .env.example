# Supabase
SUPABASE_URL=https://************.supabase.co
SUPABASE_SERVICE_ROLE_KEY=*************

# PostgreSQL Direct Connection
PG_HOST=db.*************.supabase.co
PG_DATABASE=postgres
PG_USER=postgres
PG_PASSWORD=*************
PG_PORT=5432
PG_SSLMODE=require

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# Règles de flux
HAS_DESTINATION=no
ONLY_FLIGHTS=no
DATES_TYPE=flexible
BUDGET_PRECISE=no

# LLM API Keys (à configurer plus tard)
# Laisser la valeur vide permet de définir la clé via une variable d'environnement.
OPENAI_API_KEY=

# CrewAI settings
MAX_RPM=50
TEMPERATURE=0.3
MAX_ITER=5
VERBOSE=true

# Logging
LOG_LEVEL=INFO